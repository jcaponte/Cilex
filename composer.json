{
    "name"        : "jcaponte/cilex",
    "description" : "The PHP micro-framework for Command line tools based on the Symfony5 Components",
    "keywords"    : ["microframework","cli"],
    "homepage"    : "http://cilex.github.com",
    "license"     : "MIT",

    "autoload" : {
        "psr-4" : { "Cilex\\": "src/Cilex" }
    },

    "authors":[
        { "name":  "Mike van Riel", "email": "me@mikevanriel.com" }
    ],

    "require" : {
        "php"                      : ">=7.3.5",
        "pimple/pimple"            : "^3.3",
        "silex/api"                : "^2.3",
        "symfony/process"          : "^3.0 || ^5.0",
        "symfony/console"          : "^3.0 || ^5.0",
        "symfony/event-dispatcher" : "^3.0 || ^5.0"
    },

    "require-dev" : {
        "phpunit/phpunit" : "~8.5"
    },

    "suggest" : {
        "symfony/yaml"      : "^3.0 || ^5.0",
        "symfony/validator" : "^3.0 || ^5.0"
    },

    "extra" : {
        "branch-alias" : {
            "dev-develop": "5.x-dev"
        }
   }
}
